{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "World Population Growth (Annually %)",
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/MZ244/Week-9-Homework/refs/heads/main/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "ocean"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#a6bddb"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/MZ244/Week-9-Homework/refs/heads/main/ne_10m_admin_0_countries.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_0_countries"  
        }
      },
      "transform": [
        {
          "lookup": "properties.NAME", 
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/MZ244/Week-9-Homework/refs/heads/main/World%20Population%20growth%20(anually%25).csv"
            },
            "key": "Country", 
            "fields": ["Population Growth (%)"]
          }
        }
      ],
      "mark": "geoshape",
      "encoding": {
        "color": {
          "field": "Population Growth (%)",
          "type": "quantitative",
          "scale": {
            "scheme": "blues"
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Population Growth (%)", "type": "quantitative", "title": "Growth Rate (%)"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/MZ244/Week-9-Homework/refs/heads/main/ne_110m_graticules_30.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "lightgray",
        "strokeWidth": 0.5
      }
    }
  ],
  "projection": {
    "type": "mercator"
  }
}
