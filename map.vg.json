{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Population Change at 31 March 2024 by State",
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/MZ244/Week-9-Homework/refs/heads/main/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "ocean"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#a6bddb"  
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/MZ244/Week-9-Homework/refs/heads/main/ne_110m_graticules_30.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "lightgray",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/MZ244/Week-9-Homework/refs/heads/main/ne_10m_admin_1_states_provinces.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"  
        }
      },
      "transform": [
        {
          "lookup": "properties.STATE_NAME",  
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/MZ244/Week-9-Homework/refs/heads/main/Annual%20population%20change%20at%2031%20March%202024.csv"
            },
            "key": "States",  
            "fields": ["Change over previous year (%)"]
          }
        }
      ],
      "mark": "geoshape",
      "encoding": {
        "color": {
          "field": "Change over previous year (%)",
          "type": "quantitative",
          "scale": {
            "scheme": "blues"  
          }
        },
        "tooltip": [
          {"field": "properties.STATE_NAME", "type": "nominal", "title": "State"},
          {"field": "Change over previous year (%)", "type": "quantitative", "title": "Population Change (%)"}
        ]
      }
    }
  ],
  "projection": {
    "type": "equirectangular"
  }
}
